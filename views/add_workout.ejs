<% layout('layouts/boilerplate') %>
<div class="container mt-5">
  <form id="workoutForm" action="/addworkout" method="POST">
    <div class="form-group">
        <label for="name">Title Workout</label>
        <input type="text" class="form-control" id="name" name="name" />
    </div>

    <!-- Modal trigger -->
    <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exerciseSelectionModal">
        Select exercises
    </button>

    <!-- Selected Exercises List -->
    <ul class="list-group mt-3 mb-3" id="selectedExercises">
        <li class="list-group-item">Exercises</li>
    </ul>

    <button type="submit" class="btn btn-primary">Add Workout</button>
</form>

</div>

<!-- Modal -->
<div
  class="modal fade"
  id="exerciseSelectionModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Exercises</h5>
      </div>
      <div class="modal-body">
        <input
          type="text"
          id="myInput"
          onkeyup="search()"
          placeholder="Search for exercises.."
          class="form-control mb-3"
        />
        <ul id="exerciseList" class="list-group">
          <% exercises.forEach(function(exercise) { %>
          <li
            class="list-group-item exercise-item"
            exercise-id="<%= exercise.exerciseID %>"
            data-category="<%= exercise.muscleGroup %>"
          >
            <%= exercise.exerciseName %>
          </li>
          <% }); %>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/addworkout.js"></script>
